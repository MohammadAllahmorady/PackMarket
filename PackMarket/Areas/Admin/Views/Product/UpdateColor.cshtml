@model ProductColor
@{
    ViewData["Title"] = "بروز رسانی رنگ";
}

<link href="~/AdminCss/assets/plugins/mjolnic-bootstrap-colorpicker/dist/css/bootstrap-colorpicker.min.css" rel="stylesheet">
<div class="content-page">
    <!-- Start content -->
    < class="content">
    <div class="container" style="margin-top:5%;">
        <div class="row">
            <div class="col-lg-12">
                <div class="card-box">
                    <form asp-action="UpdateColor" enctype="multipart/form-data" method="post">
                        <input type="hidden" asp-for="ColorId"/>
                        <div class="form-group">
                            <label asp-for="ColorName" for="userName">اسم رنگ</label>
                            <input asp-for="ColorName" type="text" parsley-trigger="change" placeholder="اسم رنگ را وارد کنید" class="form-control">
                            <span asp-validation-for="ColorName"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ColorCode">انتخاب رنگ</label>
                            <input asp-for="ColorCode" type="text" class="colorpicker-rgba form-control" data-color-format="rgba">
                            <span asp-validation-for="ColorCode"></span>
                        </div>

                        <div class="form-group text-right m-b-0">
                            <button class="btn btn-primary waves-effect waves-light" type="submit">
                                ثبت اطلاعات
                            </button>
                            <a asp-action="ShowAllColor" class="btn btn-default waves-effect waves-light m-l-5">
                                لغو
                            </a>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/AdminCss/assets/plugins/mjolnic-bootstrap-colorpicker/dist/js/bootstrap-colorpicker.min.js"></script>
    <script>
        $('.colorpicker-rgba').colorpicker();
    </script>
}
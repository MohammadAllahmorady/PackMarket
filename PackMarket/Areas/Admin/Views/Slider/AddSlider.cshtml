@model MainSlider
@{
    ViewData["Title"] = "AddSlider";
}
<div class="content-page">
    <!-- Start content -->
    < class="content">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="card-box">
                    <div class="dropdown pull-right">
                        <a href="#" class="dropdown-toggle card-drop" data-toggle="dropdown" aria-expanded="false">
                            <i class="zmdi zmdi-more-vert"></i>
                        </a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="#">فعا</a></li>
                            <li><a href="#">متن اول</a></li>
                            <li><a href="#">متن دوم</a></li>
                            <li class="divider"></li>
                            <li><a href="#">متن پاورقی</a></li>
                        </ul>
                    </div>

                    <h4 class="header-title m-t-0 m-b-30">نمونه اول</h4>

                    <form asp-action="AddSlider" method="post" data-parsley-validate="" novalidate="">
                        <div class="form-group">
                            <label asp-for="SliderTitle" for="userName">عنوان اسلایدر</label>
                            <input asp-for="SliderTitle" type="text" parsley-trigger="change" placeholder="عنوان اسلایدر را وارد نمایید" class="form-control" id="userName" data-parsley-id="4">
                            <span asp-validation-for="SliderTitle" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="SliderAlt" for="userName">Alt اسلایدر</label>
                            <input asp-for="SliderAlt" type="text"  parsley-trigger="change" placeholder="Alt اسلایدر را وارد نمایید" class="form-control" id="userName" data-parsley-id="4">
                        </div>
                        <div class="form-group">
                            <label asp-for="SliderLink" for="userName">لینک اسلایدر</label>
                            <input asp-for="SliderLink" type="text"  parsley-trigger="change" placeholder="لینک اسلایدر را وارد نمایید" class="form-control" id="userName" data-parsley-id="4">
                        </div>
                        <div class="form-group">
                            <label asp-for="SliderSort" for="userName">ترتیب اسلایدر</label>
                            <input asp-for="SliderSort" type="number"  parsley-trigger="change" class="form-control" id="userName" data-parsley-id="4">
                        </div>
                        <div class="form-group">
                            <label asp-for="SliderImage" for="userName">تصویر اسلایدر</label>
                            <input asp-for="SliderImage" type="text"  parsley-trigger="change" class="form-control" id="userName" data-parsley-id="4">
                            <span asp-validation-for="SliderImage" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <div class="checkbox">
                                <input asp-for="IsActive" id="remember-1" type="checkbox" data-parsley-multiple="remember-1" data-parsley-id="13">
                                <label asp-for="IsActive" for="remember-1"> آیا اسلایدر نمایش داده شود؟ </label>
                            </div>
                        </div>

                        <div class="form-group text-right m-b-0">
                            <button class="btn btn-primary waves-effect waves-light" type="submit">
                                ثبت اطلاعات
                            </button>
                            <a asp-action="Index" class="btn btn-default waves-effect waves-light m-l-5">
                                لغو
                            </a>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
